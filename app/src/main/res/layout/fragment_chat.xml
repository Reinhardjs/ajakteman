<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".siswa.chat.ChatFragment"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#CCC">

        <!-- TODO: Update blank fragment layout -->

        <!--<RatingBar-->
        <!--android:id="@+id/rating_bar"-->
        <!--android:numStars="5"-->
        <!--android:stepSize="1"-->
        <!--android:rating="3"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:isIndicator="true"-->
        <!--style="@style/customRatingBar"/>-->

        <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/simpleRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srb_numStars="5"
            app:srb_minimumStars="1"
            app:srb_rating="3"
            app:srb_starWidth="15dp"
            app:srb_starHeight="20dp"
            app:srb_starPadding="2dp"
            app:srb_stepSize="1"
            app:srb_isIndicator="true"
            app:srb_clickable="false"
            app:srb_scrollable="true"
            app:srb_clearRatingEnabled="true"
            app:srb_drawableEmpty="@drawable/ic_person_white"
            app:srb_drawableFilled="@drawable/ic_person_gray">
        </com.willy.ratingbar.ScaleRatingBar>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tombol"/>

        <Button
            android:id="@+id/manualGenerate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="Manually Generate Token"/>

        <Button
            android:id="@+id/checkID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="Check ID"/>

        <Button
            android:id="@+id/checkToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="Check TOKEN"/>

        <Button
            android:id="@+id/enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="Enable"/>

        <Button
            android:id="@+id/disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="Disable"/>

        <Button
            android:id="@+id/deleteInstence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="Delete Instance ID"/>

    </LinearLayout>

</ScrollView>