<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tutor.ajakteman.fragment.TentangFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ajak teman adalah platform yang menghubungkan generasi setiap generasi muda untuk meraih tujuan bersama dalam aspek pendidikan, dengan sistem patungan."
                    android:textAlignment="center"
                    android:textSize="15.5dp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bagaimana cara kerjanya?"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:src="@drawable/iconhp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="daftarkan akunmu lalu, kemudian pilih pelajaran yang ingin dikonsultasikan"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="kamu akan terhubung dengan teman di daerah terdekat yang memiliki minat belajar yang sama, plus tutor yang berpengalaman di bidangnya"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1.5">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/iconbuku"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/iconbuku"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/iconbuku"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="lakukan pembayaran patungan sesuai dengan nominal tertera"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="nikmati waktu belajar bersama yang sangat menyenangkan dengan teman-teman barumu secara langsung"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="di scroll yaa:)"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kenapa ajak teman?"
                    android:textColor="@color/colorPrimary"
                    android:textSize="28sp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="360dp"
                        android:layout_height="90dp"
                        android:layout_weight="0.6"
                        android:src="@drawable/iconteman"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Bertemu dengan teman-teman baru dengan minat yang sama"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Ilmunya dapat, uangnya hemat!"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"/>

                    <ImageView
                        android:layout_width="360dp"
                        android:layout_height="90dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/iconsuka"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="360dp"
                        android:layout_height="90dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/iconguru"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Menambah wawasan dengan pendampingan tutor yang berpengalaman"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
