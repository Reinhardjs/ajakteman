<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">13dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
    </style>

    <style name="MyLightCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>

    <!--<item name="contentPaddingBottom">0dp</item>-->
    <!--<item name="contentPaddingTop">0dp</item>-->
    <!--<item name="contentPaddingLeft">0dp</item>-->
    <!--<item name="contentPaddingRight">0dp</item>-->
</resources>
